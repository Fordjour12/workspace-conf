// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "play_sound_when_agent_done": true,
    "model_parameters": [],
    "dock": "left"
  },
  "icon_theme": "Symbols Icon Theme",
  "telemetry": {
    "metrics": false,
    "diagnostics": true
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "ui_font_family": "Zed Plex Mono",
  "buffer_font_weight": 500,
  "ui_font_weight": 500,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha (Blur)",
    "dark": "Vercel Dark"
  },
  "relative_line_numbers": true,
  "format_on_save": "language_server",
  "code_actions_on_format": {
    "provider": true
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "right"
  },
  "chat_panel": {
    "dock": "right"
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "terminal": {
    "font_family": "Zed Plex Mono",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ]
}
